<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Users_API">
  <parameter name="env" value="qa"/>
  <parameter name="version" value="v3"/>
  <test name="Register User">
    <classes>
      <class name="com.example.api.tests.apiScripts.userRegistration">
        <methods>
          <include name="registerUserSuccess"/>
          <include name="registerWithInvalidEmail"/>
          <include name="registerWithDuplicateEmail"/>
          <include name="registerWithInvalidPassword"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Login User">
    <classes>
      <class name="com.example.api.tests.apiScripts.loginUser">
        <methods>
          <include name="loginUserSuccess"/>
          <include name="loginUserWithInvalidEmail"/>
          <include name="loginUserWithInvalidPassword"/>
          <include name="loginUserWithInvalidCredentials"/>
        </methods>
      </class>
    </classes>
  </test>
  <test name="Change Password">
    <classes>
      <class name="com.example.api.tests.apiScripts.changePassword">
        <methods>
          <include name="changePasswordSuccess"/>
          <include name="changePasswordInvalidCurrentPassword"/>
          <include name="changePasswordIncorrectPassword"/>
          <include name="changePasswordInvalidNewPassword"/>
          <include name="currentPasswordSameAsNewPassword"/>
          <include name="currentPasswordSameAsNewPassword"/>
        </methods>
      </class>
    </classes>
  </test>
</suite>
